.search-content {
  display: flex;
  height: calc(100vh - 100rpx);
}
.search-content-l {
  flex: 2;
}
.search-content-l-item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #eee;
  border-bottom: 1px solid #ccc;
  border-left: 4px solid #eee;
}
.search-content-l view.active {
  background-color: #fff;
  border-left: 4px solid var(--baseColor);
}
.search-content-r {
  flex: 5;
}
.search-content-r-banner {
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 10rpx;
}
.search-content-r-banner image {
  width: 90%;
}
.search-content-r-title {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 20rpx 0;
}
.search-content-r-title .gray {
  color: #ccc;
}
.search-content-r-content {
  display: flex;
  flex-wrap: wrap;
}
.search-content-r-content .content-item {
  width: 33.3%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.search-content-r-content .content-item image {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 8rpx;
}
